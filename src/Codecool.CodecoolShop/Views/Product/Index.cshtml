@{
    ViewData["Title"] = "Home";
}

<div id="moto">
    <h3 style="text-align: center; margin-top: 50px; margin-bottom: 50px">All you had to do was to buy the god damn Game, CG</h3>
</div>

    
@model List<Codecool.CodecoolShop.Models.ProductCategory>

<div class="container">
    @foreach (var element in Model)
    {
        <div class="col-lg-3 col-lg-3" style="display: inline-block; max-width: 350px; height: 650px;">
            <div class="card" style="height: 650px">
                <img src="@element.FeaturedProduct.imgURL" style="height: 100px; align-self: center; padding-top: 10px">

                <div class="card-body">
                    <h5 class="card-title text-center">
                        Featured @element.Name Game
                    </h5>
                    <h5 class="card-title">@element.FeaturedProduct.Name</h5>
                    <p class="card-text">@element.FeaturedProduct.MiniDescription</p>
                    <p class="card-text">Category: @element.FeaturedProduct.ProductCategory.Name</p>
                    <p class="card-text">Supplier: @element.FeaturedProduct.Supplier.Name</p>
                </div>
                <div class="card-footer">
                    <p class="card-text text-center"><strong>Price: @element.FeaturedProduct.DefaultPrice.ToString("C2")</strong></p>
                    <div class="d-flex justify-content-center" style="margin-bottom: 20px;"><a type="button" class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="AddToCart" asp-route-id="@element.Id">Add To Cart</a></div>
                </div>
            </div>
        </div>
    }


</div>

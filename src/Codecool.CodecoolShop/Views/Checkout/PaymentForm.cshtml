@{
    ViewData["Title"] = "Payment";
}

@model Codecool.CodecoolShop.Models.Payment

@using (Html.BeginForm("ValidationPayment", "Checkout", FormMethod.Post))
{  
    <input id="id" type="hidden"/>
    <div class="container">
    <div class="first-page-main-container"></div>
            
    <div class="all-info-container">
    <div class="nav-container">
        <p>
            <span>
                Total: 
                <span id="total">@ViewBag.TotalPrice</span>
            </span>
        </p>
    </div>
                
    <div class="form-container">
    <p class="form-container">Please complete your delivery details</p>
                    
    <div class="container-input-fullwidth">
        <label asp-for="CardHolder" class="label-form-details">Card Holder</label>
        @Html.EditorFor(model => model.CardHolder, new { htmlAttributes = new 
        { @class = "input-fullwidth-form-details", size = 32,  maxlength="90" , autocomplete="off", 
            placeholder="Write card holder name" } })
        <span asp-validation-for="CardHolder" class="text-danger"></span>
    </div>

    <div class="container-input-fullwidth">
        <label asp-for="CardNumber" class="label-form-details">Card Number</label>
        @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new 
        { @class = "input-fullwidth-form-details", size = 32,  maxlength="90" , autocomplete="off", 
            placeholder="Write the card number" } })
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>
    <div class="container-input-fullwidth">
        <label asp-for="ExpiryMonth" class="label-form-details">Expiry Month</label>
        @Html.EditorFor(model => model.ExpiryMonth, new { htmlAttributes = new 
        { @class = "input-fullwidth-form-details", size = 32,  maxlength="90" , autocomplete="off", 
            placeholder="Write the card expiry month" } })
        <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
    </div>

    <div class="container-input-fullwidth">
        <label asp-for="ExpiryYear" class="label-form-details">Expiry Year</label>
        @Html.EditorFor(model => model.ExpiryYear, new { htmlAttributes = new 
        { @class = "input-fullwidth-form-details", size = 32,  maxlength="90" , autocomplete="off", 
            placeholder="Write the card expiry year" } })
        <span asp-validation-for="ExpiryYear" class="text-danger"></span>
    </div>

    <div class="container-input-fullwidth">
        <label asp-for="CVV" class="label-form-details">CVV</label>
        @Html.EditorFor(model => model.CVV, new { htmlAttributes = new 
        { @class = "input-fullwidth-form-details", size = 32,  maxlength="90" , autocomplete="off", 
            placeholder="Write the card CVV" } })
        <span asp-validation-for="CVV" class="text-danger"></span>
    </div>
        <div>
            <input type="submit" value="Payment" id="Submit" class="btn btn-default" style="background-color: #1b6ec2; color: white" />
        </div>
    </div>

    </div>
    </div>

}
